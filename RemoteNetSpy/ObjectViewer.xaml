<Window x:Class="RemoteNetSpy.ObjectViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteNetSpy"
        xmlns:remoteNetGui="clr-namespace:RemoteNetGui"
        mc:Ignorable="d"
        Title="ObjectViewer" Height="560" Width="903"
        Style="{DynamicResource CustomWindowStyle}">
    <Window.Resources>
        <remoteNetGui:MemberToIconConverter x:Key="memToIconConverter"/>
    </Window.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="5">
            <DockPanel DockPanel.Dock="Top" Margin="2">
                <DockPanel DockPanel.Dock="Top" Margin="0,3">
                    <TextBlock DockPanel.Dock="Left" Padding="0,0,10,0">Object Type:</TextBlock>
                    <Image DockPanel.Dock="Left" MaxHeight="14" Source="/icons/Class.png" Margin="0,0,3,0" />
                    <TextBlock x:Name="objTypeTextBox"></TextBlock>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="0,3">
                    <TextBlock>Object Address:</TextBlock>
                    <TextBlock x:Name="objAddrTextBox"/>
                </DockPanel>
            </DockPanel>
            <DockPanel DockPanel.Dock="Top" Margin="0,5">
                <TextBlock>Members:</TextBlock>
            </DockPanel>
        </DockPanel>
        <DataGrid x:Name="membersGrid" DockPanel.Dock="Top" Margin="5" 
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeaderWidth="0"
                  AutoGenerateColumns="False"
                  >
            <DataGrid.Resources>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="{StaticResource ControlDarkerBackground}" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Name" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel MinWidth="45">
                                <Image DockPanel.Dock="Left"
                                Source="{Binding Path=MemberType, Converter={StaticResource memToIconConverter}}" Margin="0,0,3,0" Height="16"/>
                                <TextBlock DockPanel.Dock="Left"
                                Text="{Binding Path=Name}"/>
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}"
                                    MinWidth="30" Width="*" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}"
                                    MinWidth="10" Width="120" />
            </DataGrid.Columns>
        </DataGrid>


    </DockPanel>
</Window>
