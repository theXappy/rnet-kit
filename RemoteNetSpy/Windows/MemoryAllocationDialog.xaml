<Window x:Class="RemoteNetSpy.MemoryAllocationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{DynamicResource CustomWindowStyle}"
        Title="Allocate Memory" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource darkThemeButtonStyleKey}"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Allocate memory in the target process:" 
                   FontWeight="Bold" Margin="0,0,0,15"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Size (bytes):" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" x:Name="SizeTextBox" Text="1024" VerticalAlignment="Center"
                     Background="{StaticResource ControlDefaultBackground}"
                     Foreground="{StaticResource ControlDefaultForeground}"
                     BorderBrush="{StaticResource ControlDefaultBorderBrush}"/>
            <CheckBox Grid.Column="2" x:Name="ZeroMemoryCheckBox" Content="Zero memory" 
                      IsChecked="True" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </Grid>
        
        <TextBlock Grid.Row="2" x:Name="StatusTextBlock" Text="" 
                   Foreground="Orange" Margin="0,10,0,0" VerticalAlignment="Top"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="AllocateButton" Content="Allocate" MinWidth="80" Margin="5" 
                    Padding="10,5" Click="AllocateButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" MinWidth="80" Margin="5" 
                    Padding="10,5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>