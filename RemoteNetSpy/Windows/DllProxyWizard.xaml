<Window x:Class="RemoteNetSpy.Windows.DllProxyWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteNetSpy.Windows"
        mc:Ignorable="d"
        Title="DLL Proxy Wizard" Height="820" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize" MinWidth="600" MinHeight="500"
        Style="{DynamicResource CustomWindowStyle}">
    <Window.Resources>
        <!-- Style for Buttons -->
        <Style TargetType="Button" BasedOn="{StaticResource darkThemeButtonStyleKey}">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
        </Style>
        
        <!-- Style for DataGrid Column Headers -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource ControlDarkerBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ControlDefaultForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlDefaultBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Style for DataGrid Cells -->
        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ControlDefaultForeground}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" 
                                            HorizontalAlignment="Left"
                                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style for DataGrid Rows -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource ControlDefaultBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ControlDefaultForeground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlMouseOverBackground}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlSelectedBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style for DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource ControlDefaultBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlDefaultBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource ControlDefaultBorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource ControlDefaultBorderBrush}"/>
            <Setter Property="RowBackground" Value="{DynamicResource ControlDefaultBackground}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource ControlDarkerBackground}"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource WindowTitleColour}" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <Image Source="../icons/OpenFolder.png" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="DLL Proxy Wizard" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource ControlDefaultForeground}"/>
                    <TextBlock Text="Create a proxy DLL to inject into the target process" FontSize="12" 
                               Foreground="{DynamicResource ControlDefaultForeground}" Opacity="0.8"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel Name="MainContent">
                
                <!-- Step 1: Process Info -->
                <GroupBox Header="Step 1: Target Process" Margin="0,0,0,20">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Process Name:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ProcessName}" Margin="10,5" FontWeight="Bold"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Process ID:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ProcessId}" Margin="10,5" FontWeight="Bold"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Architecture:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ProcessArchitecture}" Margin="10,5" FontWeight="Bold"/>
                    </Grid>
                </GroupBox>
                
                <!-- Step 2: DLL Selection -->
                <GroupBox Header="Step 2: Select Target DLL" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" FontSize="12">
                            Choose a DLL from the target process to hijack. DLLs with fewer exports are typically easier to proxy.
                        </TextBlock>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="ScanDllsButton" Content="Scan Process DLLs" Width="130" Height="25" 
                                    Click="ScanDllsButton_Click" Margin="0,0,10,0"/>
                            <TextBlock x:Name="ScanStatusText" Text="Click 'Scan Process DLLs' to begin" 
                                       VerticalAlignment="Center" 
                                       Foreground="{DynamicResource ControlDefaultForeground}" Opacity="0.7"/>
                        </StackPanel>
                        
                        <DataGrid x:Name="DllsDataGrid" Height="200" AutoGenerateColumns="False" 
                                  IsReadOnly="True" SelectionMode="Single" CanUserReorderColumns="False"
                                  ItemsSource="{Binding VictimDlls}" SelectedItem="{Binding SelectedVictimDll}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Module Name" Binding="{Binding ModuleName}" Width="150"/>
                                <DataGridTextColumn Header="Export Count" Binding="{Binding ExportCount}" Width="100"/>
                                <DataGridCheckBoxColumn Header="In Windows Dir" Binding="{Binding IsInWindowsDirectory}" Width="120"/>
                                <DataGridTextColumn Header="Path" Binding="{Binding OriginalFilePath}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Step 3: Payload Info -->
                <GroupBox Header="Step 3: Payload Configuration" Margin="0,0,0,20">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,10" FontSize="12">
                            The RemoteNET injection toolkit will be used as the payload.
                        </TextBlock>
                        
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <TextBlock Text="Payload DLL:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding PayloadDllPath}" FontStyle="Italic" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                
                <!-- Step 4: Progress -->
                <GroupBox x:Name="ProgressGroupBox" Header="Step 4: Proxy Creation" Margin="0,0,0,20" Visibility="Collapsed">
                    <StackPanel Margin="10">
                        <TextBlock x:Name="ProgressText" Text="Ready to create proxy..." Margin="0,0,0,10"/>
                        <ProgressBar x:Name="ProgressBar" Height="20" Margin="0,0,0,10"/>
                        <TextBox x:Name="LogTextBox" Height="150" IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="10"
                                 Background="{DynamicResource ControlDarkerBackground}" 
                                 Foreground="{DynamicResource ControlDefaultForeground}"/>
                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource ContainerBackground}" Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CreateProxyButton" Content="Create Proxy DLL" Width="130" Height="30" 
                        Margin="0,0,10,0" Click="CreateProxyButton_Click" IsEnabled="False"
                        Background="{DynamicResource ControlPrimaryColourBackground}" 
                        Foreground="White" 
                        BorderBrush="{DynamicResource ControlBrightPrimaryColourBorderBrush}"/>
                <Button x:Name="CloseButton" Content="Close" Width="80" Height="30" 
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
