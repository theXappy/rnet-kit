<Window x:Class="RemoteNetSpy.ArgumentPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{DynamicResource CustomWindowStyle}"
        Title="Method Parameters" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style TargetType="ToolBar">
            <Setter Property="ToolBarTray.IsLocked" Value="True"/>
            <Setter Property="OverflowMode" Value="Never"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolBar">
                        <ToolBarPanel IsItemsHost="True" Background="{x:Null}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ToolBarTray">
            <Setter Property="Background" Value="{x:Null}"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource darkThemeButtonStyleKey}"/>
        
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Method signature -->
        <Border Grid.Row="0" Background="{StaticResource ControlDarkerBackground}" 
                BorderBrush="{StaticResource ControlDefaultBorderBrush}" BorderThickness="0,0,0,1" Padding="15,10">
            <StackPanel>
                <TextBlock Text="Method Signature:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="MethodSignatureText" Text="Loading..."
                           FontFamily="Consolas" FontSize="12" Foreground="LightGreen" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- Parameters list -->
        <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ParametersPanel"/>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button x:Name="OkButton" Content="Invoke Method" MinWidth="120" Margin="5" Padding="10,5" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" MinWidth="80" Margin="5" Padding="10,5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
